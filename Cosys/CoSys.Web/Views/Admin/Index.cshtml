@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "管理员管理";
}
<style>
    #menuFlagDiv, #storeFlagDiv input {
        float: left;
    }

    #menuFlagDiv, #storeFlagDiv label {
        float: left;
    }
</style>
<div class="am-cf am-padding">
    <div class="am-fl am-cf"><a href="/"><strong class="am-text-primary am-text-lg">首页</strong></a> /<small>管理员管理</small></div>
</div>
<div id="searchDomain">

    <div class="am-g">
        <div class="am-u-lg-3">
            <div class="am-input-group am-input-group-sm">
                <span class="am-input-group-label">名称：</span>
                <input type="text" class="am-form-field" placeholder="按管理员名称搜索" style="width:100px;" name="name" ;>

                <span class="am-input-group-btn am-margin-left-sm">
                    <button class="am-btn am-btn-default" id="btnSearch" type="button">搜索</button>
                    <button class="am-btn am-btn-default" onclick="ClearFilter()" type="button">清除</button>
                </span>
            </div>
        </div>


    </div>
    <div class="am-g am-margin-top-sm">
        <div class="am-u-lg-6">
            <div class="am-btn-toolbar">
                <div class="am-btn-group am-btn-group-xs">
                    <button onclick="add()" type="button" class="am-btn am-btn-default"><span class="am-icon-plus"></span> 新增</button>
                    <button onclick="batchDelete()" type="button" class="am-btn am-btn-default"><span class="am-icon-trash-o"></span> 删除</button>
                </div>
            </div>
        </div>

    </div>

</div>
<div class="grid_container">
    <table id="dataTable" class="am-table am-table-compact am-table-hover table-main">
        <thead>
            <tr>
                <th dataname="ID" type="checkbox"></th>
                <th dataname="Account">账号</th>
                <th dataname="Name">名称</th>
                <th dataname="RoleName">角色</th>
                <th dataname="AuditCount">审核数</th>
                <th dataname="EditCount">修稿数</th>
                <th dataname="AuditPassCount">审核通过数</th>
                <th type="eventlist"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section scripts
{
    <script type="text/javascript">
        function ClearFilter() {
            $("#searchDomain input").val("");
        }
        //批量删除
        function batchDelete() {
            $.Nuoya.confirm("确认删除？", function () {
                grid.del({
                    ajaxUrl: "/Admin/Delete",
                    callback: function (json) {
                        grid.reload();
                    }
                });
            });
        }
        function formInit(dataitem) {
            //添加表单验证
            $.Nuoya.form("form").validate({
                rules: {
                    Name: {
                        required: true,
                        maxlength: 100
                    },
                    Account: {
                        required: true,
                        maxlength: 12
                    },
                    Mobile: {
                        required: true,
                        maxlength: 11
                    },
                    Remark: {
                        maxlength: 128
                    }
                },
                messages: {
                    Name: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    Account: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    Mobile: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    Remark: {
                        maxlength: "最多{0}个字符"
                    },
                }
            });

            $.Nuoya.action("/Role/GetSelectItem", { id: dataitem ? dataitem.RoleId : "" }, function (json) {
                $(json).each(function () {
                    $("select[name='RoleId']").append("<option " + (this.Selected == true ? "selected" : "") + " value='" + this.Value + "'>" + this.Text + "</option>");
                });
            });

            if (dataitem == null) {
                $.Nuoya.action("/NewsDepartment/GetSelectItem", {}, function (json) {
                    $(json).each(function () {
                        $("select[name='NewsDepartmentID']").append("<option  value='" + this.Value + "'>" + this.Text + "</option>");
                    });
                });
            }
            else {
                var departmentIdAry = dataitem.split(';');
                if (departmentIdAry.length == 1) {
                    $.Nuoya.action("/NewsDepartment/GetSelectItem", { id: dataitem.NewsDepartmentID }, function (json) {
                        $(json).each(function () {
                            $("select[name='NewsDepartmentID']").append("<option " + (this.Selected == true ? "selected" : "") + " value='" + this.Value + "'>" + this.Text + "</option>");
                        });
                    });
                }
                else if (departmentIdAry.length == 2) {
                    $("#childrenDiv").show();
                    $.Nuoya.action("/NewsDepartment/GetSelectItem", { id: departmentIdAry[0] }, function (json) {
                        $(json).each(function () {
                            $("select[name='NewsDepartmentID']").append("<option " + (this.Selected == true ? "selected" : "") + " value='" + this.Value + "'>" + this.Text + "</option>");
                        });
                    });

                    $.Nuoya.action("/NewsDepartment/GetSelectItem", { id: departmentIdAry[1] }, function (json) {
                        $(json).each(function () {
                            $("select[name='ChildrenDepartmentID']").append("<option " + (this.Selected == true ? "selected" : "") + " value='" + this.Value + "'>" + this.Text + "</option>");
                        });
                    });
                }
            }
        }

        //新增
        function add() {
            $.Nuoya.ajaxDialog({
                closeViaDimmer: false,
                width: "1000px",
                height: "600px",
                ajaxUrl: "/HtmlTemplates/Admin/Update.html",
                title: "添加管理员",
                callback: function (e) {
                    formInit();//表单初始化
                },
                buttons: [{
                    label: "保存",
                    callback: function (e) {
                        $.Nuoya.form("form").ajaxSubmit({
                            ajaxUrl: "/Admin/Add",
                            callback: function (data) {
                                if (!data.ErrorDesc) {
                                    e.hide();
                                    grid.reload();
                                }
                                else
                                    $.Nuoya.alert(data.ErrorDesc);
                            }
                        });
                    }
                }]
            })
        }

        var grid = $.Nuoya.grid({
            tableId: "dataTable",
            //表格id
            search: {
                domainId: "searchDomain",
                subId: "btnSearch"
            },
            ajaxUrl: "/Admin/GetPageList",
            //数据请求地址

            events: [

                {
                    className: "am-text-secondary",
                    icon: "icon-pencil-square-o",
                    name: "编辑",
                    click: function (item) {
                        $.Nuoya.ajaxDialog({
                            closeViaDimmer: false,
                            width: "1000px",
                            height: "600px",
                            ajaxUrl: "/HtmlTemplates/Admin/Update.html",
                            title: "编辑管理员",
                            callback: function (e) {
                                $.Nuoya.action("/Admin/Find", { id: item.ID }, function (model) {
                                    formInit(model);//表单初始化
                                    //载入数据
                                    $.Nuoya.form("form").dataLoad({
                                        data: model
                                    });
                                });
                            },
                            buttons: [{
                                label: "保存",
                                callback: function (e) {
                                    $.Nuoya.form("form").ajaxSubmit({
                                        ajaxUrl: "/Admin/Update",
                                        params: {
                                            ID: item.ID
                                        },
                                        callback: function (data) {
                                            if (!data.ErrorDesc) {
                                                e.hide();
                                                grid.reload();
                                            }
                                            else
                                                $.Nuoya.alert(data.ErrorDesc);
                                        }
                                    });
                                }
                            }]
                        })
                    }
                }
                ,
            {
                className: "am-text-danger",
                icon: "icon-hand-rock-o",
                name: "修改密码",
                click: function (item) {
                    changePassword();
                }
            }
                ,
                {
                    className: "am-text-danger",
                    icon: "icon-trash-o",
                    name: "删除",
                    click: function (item) {
                        $.Nuoya.confirm("确认删除？", function () {
                            $.Nuoya.deleteAction("/Admin/Delete", {
                                ids: item.ID
                            },
                            function () {
                                grid.reload();
                            });
                        });
                    }
                }
            ]
        });

    </script>

}