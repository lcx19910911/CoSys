@model List<StatisticsModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "渠道统计";
}
<div class="am-cf am-padding">
    <div class="am-fl am-cf"><a href="/home/admin"><strong class="am-text-primary am-text-lg">首页</strong></a> /<small>渠道统计</small></div>
</div>
<div class="am-g am-margin-top-sm">
    <div class="am-u-lg-6 am-padding-left-xl">
        <div class="am-btn-toolbar">
            <div class="am-btn-group am-btn-group-xs">
                <button onclick="Export()" type="button" class="am-btn am-btn-default"> 导出</button>
            </div>
        </div>
    </div>

</div>
<div class="grid_container am-padding">
    <div class="am-g">
        <div class="am-u-lg-10">
        
                <table class="am-table am-table-compact am-table-hover table-main am-table-bordered">
                    <thead>
                        <tr>
                            <th>编号</th>
                            <th>发布渠道</th>
                            <th>总发布数</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                        var index = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@item.Name</td>
                                <td>@item.AllCount</td>
                            </tr>
                        }
                        }
                    </tbody>

                </table>

        </div>
    </div>

</div>
@section scripts
{
    <script>
        function Export()
        {
            var url = "/Statistics/ExportChanelPageList";
            window.open(url);
        }
    </script>
}